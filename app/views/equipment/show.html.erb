<% content_for :title, "Showing equipment" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing equipment</h1>

  <div class="my-5">
    <p class="font-medium mb-1 text-gray-500">Número de Série</p>
    <p class="text-lg"><%= @equipment.serial_number %></p>
  </div>

  <div class="my-5">
    <p class="font-medium mb-1 text-gray-500">Responsável</p>
    <p class="text-lg"><%= @equipment.responsible %></p>
  </div>

  <%= link_to "Edit this equipment", edit_equipment_path(@equipment), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to equipment", equipment_index_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= button_to "Destroy this equipment", @equipment, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
