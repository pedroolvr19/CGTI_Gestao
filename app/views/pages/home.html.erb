<div class="w-full max-w-4xl mx-auto">
  <div class="mb-10 text-center">
    <h1 class="text-3xl font-bold text-[#1351b4] mb-2">Bem-vindo ao Sistema de Gestão</h1>
    <p class="text-gray-600">Selecione uma das opções abaixo para começar</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Card: Ver Equipamentos -->
    <%= link_to equipment_index_path, class: "group block p-8 bg-white rounded-lg shadow-sm border border-gray-200 hover:border-[#1351b4] hover:shadow-md transition-all duration-200" do %>
      <div class="flex flex-col items-center text-center">
        <div class="w-16 h-16 bg-blue-50 rounded-full flex items-center justify-center mb-4 group-hover:bg-[#1351b4] group-hover:text-white transition-colors text-[#1351b4]">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
          </svg>
        </div>
        <h2 class="text-xl font-bold text-gray-800 mb-2 group-hover:text-[#1351b4]">Ver Equipamentos</h2>
        <p class="text-gray-500 text-sm">Consulte a lista completa de notebooks e impressoras cadastrados.</p>
      </div>
    <% end %>

    <!-- Card: Adicionar Novo -->
    <%= link_to new_equipment_path, class: "group block p-8 bg-white rounded-lg shadow-sm border border-gray-200 hover:border-[#1351b4] hover:shadow-md transition-all duration-200" do %>
      <div class="flex flex-col items-center text-center">
        <div class="w-16 h-16 bg-blue-50 rounded-full flex items-center justify-center mb-4 group-hover:bg-[#1351b4] group-hover:text-white transition-colors text-[#1351b4]">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
        </div>
        <h2 class="text-xl font-bold text-gray-800 mb-2 group-hover:text-[#1351b4]">Adicionar Novo</h2>
        <p class="text-gray-500 text-sm">Cadastre um novo equipamento (Notebook ou Impressora) no sistema.</p>
      </div>
    <% end %>
  </div>
</div>
