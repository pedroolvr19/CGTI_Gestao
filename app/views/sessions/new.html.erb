<div class="min-h-screen flex flex-col items-center pt-10 bg-white">
  <div class="w-full max-w-md p-6">
    <div class="mb-8">
      <h1 class="text-2xl font-bold text-[#1351b4] mb-2">Identifique-se no gov.br</h1>
      <p class="text-gray-600 text-sm">Digite seu email para come√ßar</p>
    </div>

    <% if alert = flash[:alert] %>
      <div class="mb-4 p-4 text-red-700 bg-red-100 rounded-lg border border-red-200" role="alert">
        <%= alert %>
      </div>
    <% end %>

    <% if notice = flash[:notice] %>
      <div class="mb-4 p-4 text-green-700 bg-green-100 rounded-lg border border-green-200" role="alert">
        <%= notice %>
      </div>
    <% end %>

    <%= form_with url: session_url, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :email_address, "Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "Ex: joao@exemplo.com", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#1351b4] focus:border-[#1351b4]" %>
      </div>

      <div>
        <div class="flex items-center justify-between mb-1">
          <%= form.label :password, "Senha", class: "block text-sm font-medium text-gray-700" %>
          <%= link_to "Esqueceu a senha?", new_password_path, class: "text-sm text-[#1351b4] hover:underline" %>
        </div>
        <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Digite sua senha", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#1351b4] focus:border-[#1351b4]" %>
      </div>

      <div>
        <%= form.submit "Entrar", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-full shadow-sm text-sm font-medium text-white bg-[#1351b4] hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#1351b4] cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
